{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block main %}
    <h2>Articles</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset("assets/uploads/images/") ~ article.image }}" alt="Article n°{{ article.id }}" width="300" height="200"><p>{{ article.image }}</p></td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_articles_crud_index') }}" class="btn btn-secondary rounded-1 h-auto">Retour à la liste</a>

    <a href="{{ path('app_articles_crud_edit', {'id': article.id}) }}" class="btn btn-secondary rounded-1 h-auto">Éditer</a>

    {{ include('articles_crud/_delete_form.html.twig') }}
{% endblock %}
